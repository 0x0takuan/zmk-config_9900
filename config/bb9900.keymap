#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/mouse.h>
#include <dt-bindings/zmk/backlight.h>
#include <dt-bindings/zmk/ext_power.h>


#define SYM 1
#define UPPER 2

/ {
    behaviors {
        td0: tap_dance_0 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <400>;
            bindings = <&mkp LCLK>, <&bt BT_CLR>;
        };
    };
    behaviors {
        tdSYM: tap_dance_SYM {
            compatible = "zmk,behavior-tap-dance-SYM";
            #binding-cells = <0>;
            tapping-term-ms = <400>;
            bindings = <&sl SYM>, <&tog SYM>;
        };
    };
    behaviors {
        tdSHFT: tap_dance_SHFT {
            compatible = "zmk,behavior-tap-dance-SHFT";
            #binding-cells = <0>;
            tapping-term-ms = <400>;
            bindings = <&sk LSHFT>, <&caps_word LSHFT>;
        };
    };
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <500>;
            bindings = <&out &kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {

            bindings = <
//         --------------------------------------------------------------------------------------------------------------------------         
//         |    Shoulder Key1    |                                                                             |    Shoulder Key2    |     
// |         Call key      |      Blackberry Key        |    Trackpad    |             Back Key                |             Endcall Key          |
// |     Q      |     W    |     E    |     R    |      T      |       Y        |       U        |        I        |       O      |      P        |     
// |     A      |     S    |     D    |     F    |      G      |       H        |       J        |        K        |       L      |      ←        |  
// |     alt    |     Z    |     X    |     C    |      V      |       B        |       N        |        M        |       $      |    Enter      |   
//        |         aA     |         0           |           SPACE              |         SYM         |        aA          |       
//        -----------------------------------------------------------------------------------------------------------------

                 &tog SYM                                                                                           &tog UPPER
    &msc SCRL_UP            &kp LGUI                            &mkp LCLK                          &mt ESC K_BACK                        &msc SCRL_DOWN
    &kp Q        &kp W      &kp E       &kp R     &kp T         &kp Y             &kp U            &kp I            &kp O            &kp P
    &kp A        &kp S      &kp D       &kp F     &kp G         &kp H             &kp J            &kp K            &kp L            &kp BSPC
    &sl SYM      &kp Z      &kp X       &kp C     &kp V         &kp B             &kp N            &kp M            &kp MINUS        &kp ENTER
    &kp LSHFT               &kp LCTRL                           &kp SPACE                          &kp LEFT                          &kp RIGHT
            >;
        };


        sym_layer {

            bindings = <        
                 &tog SYM                                                                                           &tog UPPER
    &kp F2                  &kp F4                              &mkp LCLK                          &kp F5                            &kp F12 
    &kp HASH     &kp N1     &kp N2      &kp N3    &mt RBKT STAR &mt BSLH LPAR     &kp POUND        &kp PLUS         &kp COLON        &kp LBKT
    &kp DQT      &kp N4     &kp N5      &kp N6    &mt PRCNT SLASH &kp APOS        &kp SEMI         &kp AMPS         &kp AT           &kp BSPC
    &kp LALT     &kp N7     &kp N8      &kp N9    &kp QMARK     &kp EXCL          &kp COMMA        &kp DOT          &mt KP_EQUAL CARET &kp ENTER
    &kp LSHFT               &kp N0                              &kp SPACE                          &kp UP                            &kp DOWN
            >;
        };

        upper_layer {

            bindings = <
                 &tog SYM                                                                                           &tog UPPER
    &bl BL_INC              &bl BL_TOG                          &td0                              &kp K_BACK                        &bl BL_DEC
    &none        &none      &none       &sys_reset &none        &kp DLLR            &none            &none            &none            &none
    &none        &none      &none       &none      &none        &kp CARET           &kp RBRC         &kp PIPE         &kp LBRC         &kp BSPC
    &kp LCTRL    &none      &none       &none      &none        &kp FSLH            &kp LT           &kp GT           &bootloader      &kp ENTER
    &bt BT_SEL 0            &bt BT_SEL 1                        &hm OUT_TOG SPACE                 &bt BT_SEL 2                      &bt BT_SEL 3
            >;
        };
    };
};

